<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DemoWPF.View">
    <Style x:Key="themedButton" TargetType="Button">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Padding" Value="20,0"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="themedWindow" TargetType="Window">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="WindowState" Value="Maximized"/>
        <Setter Property="Icon" Value="favicon.ico"/>
        <Setter Property="MinHeight" Value="600"/>
        <Setter Property="MinWidth" Value="800"/>
    </Style>
    <Style x:Key="progressWindow" TargetType="Window">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="Icon" Value="favicon.ico"/>
        <Setter Property="Height" Value="180"/>
        <Setter Property="Width" Value="350"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="ShowInTaskbar" Value="False"/>
    </Style>
</ResourceDictionary>